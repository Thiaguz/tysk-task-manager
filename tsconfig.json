{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": ["ES6"],
        "outDir": "build",
        "removeComments": true,
        "resolveJsonModule": true,
        "strict": true,
        "baseUrl": "./",
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["client"]
}
